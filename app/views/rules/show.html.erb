<div class="container">
  <div class="row">
    <div class="col-8">
      <div class="br-card mt-3">
        <div class="front">
          <div class="header text-center">
            <p class="h5 text-primary-default mb-0">
              <%= link_to "#{@rule.category} nº #{@rule.number}, de #{format_date(@rule.ed_date)}", @rule.hyperlink, :target => "_blank" %>
            </p>
            <span><%= "Publicado em #{format_date(@rule.pub_date)}" %></span>
          </div>
          <div class="content text-justify">
            <p class="mt-3">
              <%= @rule.long_title %>
            </p>
          </div>
          <div class="footer">
            <p>
              <strong>Órgão(s) emissor(es):</strong>
              <%= @rule.issuer %>
            </p>
            <p>
              <strong>Jurisdição:</strong>
              <%= @rule.jurisdiction %>
            </p>

            <% if @rule.user != User.first %>
              <p>
                <strong>Cadastrado pelo usuário:</strong>
                <%= "#{@rule.user.first_name} #{@rule.user.last_name} "%>
              </p>
            <% end %>
            <p>
              <strong>Polígonos:</strong>
              <div class="br-list">
                <ul>
                  <% @rule.polygons.each do |polygon| %>
                  <li><%= link_to polygon.name, "#", :target => "_blank"  %></li>
                  <% end %>
                </ul>
              </div>
            </p>
            <div class="br-divider"></div>
            <p>
              <%= link_to @rule.hyperlink, @rule.hyperlink, :target => "_blank" %>
            </p>
          </div>
        </div>
      </div>
    </div>
    </div>
    <div class="col-4">
      
  </div>
</div>
