<div class="container">
  <div class="row">
    <div class="card shadow mt-3 p-4 col-8">
      <h3>
        <strong><%= "#{@rule.category} #{@rule.number}, de #{format_date(@rule.ed_date)}" %> </strong>
      </h3>
      <p>
        <%= "Publicado em #{format_date(@rule.pub_date)}" %>
      </p>
      <p>
        <strong>Jurisdição:</strong>
        <%= @rule.jurisdiction %>
      </p>
      <p>
        <strong>Emissor:</strong>
        <%= @rule.issuer %>
      </p>
      <p>
        <strong>Categoria:</strong>
        <%= @rule.category %>
      </p>
      <p>
        <strong>Número:</strong>
        <%= @rule.number %>
      </p>
      <p>
        <strong>Data de publicação:</strong>
        <%= format_date(@rule.pub_date) %>
      </p>
      <p>
        <strong>Data de emissão:</strong>
        <%= format_date(@rule.ed_date) %>
      </p>
      <p>
        <strong>Ementa:</strong>
        <%= @rule.long_title %>
      </p>
      <p>
        <strong>Link:</strong>
        <%= link_to @rule.hyperlink, @rule.hyperlink, :target => "_blank" %>
      </p>
      <p>
        <strong>Fonte:</strong>
        <%= @rule.source %>
      </p>
      <% if @rule.user != User.first %>
        <p>
          <strong>Cadastrado pelo usuário:</strong>
          <%= "#{@rule.user.first_name} #{@rule.user.last_name} "%>
        </p>
      <% end %>
      <p>
        <strong>Polígonos:</strong>
        <ul class="m-0">
          <% @rule.polygons.each do |polygon| %>
          <li><%= link_to polygon.name, "#", :target => "_blank"  %></li>
          <% end %>
        </ul>
      </p>
    </div>
    <div class="col-4">
      <div class="br-card mt-3">
        <div class="front">
          <div class="header">
            <p class="h5 text-primary-default mb-0">
              <%= "#{@rule.category} #{@rule.number}, de #{format_date(@rule.ed_date)}" %>
            </p>
            <span><%= "Publicado em #{format_date(@rule.pub_date)}" %></span>
          </div>
          <div class="content">
            <p class="mt-3">
              <%= @rule.long_title %>
            </p>
          </div>
          <div class="footer">...</div>
        </div>
      </div>
    </div>
  </div>
</div>